@page
@model FilmDatabaseSysteem.Pages.RegistratieModel
@{
    ViewData["Title"] = "Registratie";
    ViewData["CurrentPage"] = Model.CurrentPage;

}

<section class="login-container">
    <form>
        <div class="form-group">
            <label for="user_email">Email address</label>
            <input type="email" class="form-control" id="user_email" aria-describedby="emailHelp" placeholder="Vul Email in">
            <small id="emailHelp" class="form-text text-muted">Wij delen uw Email adres nooit met derden</small>
        </div>
        <div class="form-group">
            <label for="user_pass">Password</label>
            <input type="password" class="form-control" id="user_pass" placeholder="Wachtwoord">
        </div>
        <button type="submit" class="btn btn-primary">Registreer</button>
    </form>
</section>